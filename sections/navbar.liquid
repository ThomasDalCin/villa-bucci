<!--navbar -->
<div
    class="navbar-container w-full h-auto absolute z-50 bg-white py-2.5 lg:h-full lg:px-[38px] lg:py-10 lg:w-[10vw] lg:left-0 lg:top-0 lg:bottom-0">
    <!--container logo-->
    <div class="navbar-logo absolute w-full h-auto flex items-center justify-center lg:left-0">
        <img class="w-[104px] h-[70px] object-center object-contain"
            src="{{ section.settings.logo_canteen |  img_url: 'master' }}"
            alt="{{ section.settings.logo_canteen.alt }}">
    </div>

    {% comment %} <!--container menu-->
    <div class="w-full h-auto flex items-center justify-center relative">
        <div class="w-auto h-auto absolute left-1/2 top-1/2 -translate-1/2 -translate-y-1/2 z-0">

        </div>
        <div class="w-auto h-auto hidden">
            {% render 'circle-menu-red' %}
        </div>
    </div> {% endcomment %}

    <!--scroll-down-container-->
    <div
        class="w-full h-auto items-center justify-center hidden lg:flex lg:absolute lg:top-[85vh] lg:left-1/2 lg:-translate-1/2">
        <div class="w-auto h-auto flex flex-col items-center justify-start gap-y-[62px] relative">
            <div class="w-auto h-auto mb-10">
                <p class="text-[12px] tracking-[0.12px] -rotate-90 w-[123px] min-w-[123px]">{{
                    section.settings.scroll_explore_text | default: "Scroll to Explore" }}</p>
            </div>
            <div class="w-auto h-auto absolute left-1/2 top-1/2 -translate-1/2 -translate-y-1/2">
                {% render 'scroll-explore' %}
            </div>

            <div class="w-auto h-auto">
                {% render 'line-menu' %}
            </div>
        </div>
    </div>

</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const navbarContainer = document.querySelector('.navbar-container');
        const navbarLogo = document.querySelector('.navbar-logo');
        const mm = gsap.matchMedia();

        mm.add("(max-width: 767px)", () => {
            gsap.fromTo(navbarContainer,
                {
                    height: "100svh"
                },
                {   
                    height: "90px",
                    duration: 1.5,
                    ease: "power2.inOut"
                }
            );
            gsap.fromTo(navbarLogo,
                {
                    top: "50%",
                    y: "-50%",
                    scale: 2
                },
                {   
                    top: "10px",
                    y: "0%",
                    scale: 1,
                    duration: 1.5,
                    ease: "power2.inOut"
                }
            );
        });
    })
</script>

{% schema %}
{
"name": "navbar-settings",
"settings": [
{
"type": "image_picker",
"id": "logo_canteen",
"label": "Logo Canteen"
},
]
}
{% endschema %}