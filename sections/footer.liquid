<!-- Footer Section -->
<div class="footer px-5 pb-5">
  <footer class="w-full flex flex-col items-start justify-center rounded-[8px] text-white pt-5 pb-5 lg:relative"
    style="background-color: {{ section.settings.footer_bg_color }};">

    <div
      class="w-full h-auto flex flex-col items-start justify-center px-5 pt-[51px] pb-[30px] lg:items-center lg:justify-center lg:pb-9">
      <img class="w-full h-auto object-cover object-center lg:w-[726px] lg:max-w-[726px]"
        src="{{ section.settings.oniverse_main_logo | img_url: 'master' }}"
        alt="{{ section.settings.oniverse_main_logo.alt }}">
    </div>

    <div class="w-full h-auto">
      <!-- Responsive Footer Layout -->
      <div class="flex flex-col lg:flex-wrap lg:flex-row h-auto">

        <!-- Column 1 -->
        <div
          class="flex-1 flex flex-col items-center justify-center lg:justify-start lg:items-start pt-5 pb-5 gap-y-[36px] border border-l-0 border-r-0 border-t-(--border-color) border-b-0 lg:flex-col lg:h-[377px] border-t-(--border-color) lg:border-b border-[var(--border-color)] lg:pl-10 lg:border-r border-[var(--border-color)] lg:pr-10 ">
          <h3 class=" text-center font-semibold text-(--beige-light) text-[16px] opacity-[0.3] lg:text-[24px]">ONIWINES</h3>
          <div
            class="w-full h-auto flex flex-col items-center justify-center gap-y-2.5 lg:items-start lg:justify-start">
            {% assign menuLinks = "Home,Il Gruppo,Magazine,Contatti" | split: "," %}
            {% for menuLink in menuLinks %}
            {% for linkItem in linklists.footer.links %}
            {% if linkItem.title == menuLink %}
            <li class="list-none">
              <a href="{{ linkItem.url }}" class="text-[24px] hover:text-(--orange-color) transition-all duration-200 ease-in">{{ linkItem.title |
                upcase }}</a>
            </li>
            {% endif %}
            {% endfor %}
            {% endfor %}
          </div>
        </div>

        <!-- Column 2 -->
        <div
          class="flex-1 flex flex-col items-center justify-center lg:justify-start lg:items-start pt-5 pb-5 gap-y-[36px] border border-l-0 border-r-0 border-t-(--border-color) border-b-(--border-color) lg:flex-col lg:h-[377px] lg:border-r border-[var(--border-color)] lg:pr-10">
          <h3 class="font-semibold text-lg text-(--beige-light) text-[16px] opacity-[0.3] lg:text-[24px] lg:self-center">LE CANTINE
          </h3>
          <div class="w-full h-auto flex flex-col items-center justify-center gap-y-2.5 ">
            {% assign canteenLink = "Le cantine" %}
            {% for link in linklists.main-menu.links %}
            {% if link.title == canteenLink %}
            {% assign matchingLink = link %}
            {% if matchingLink.links.size > 0 %}
            {% for childLink in matchingLink.links %}
            <li class="list-none">
              <a href="{{ childLink.url }}" class="text-[24px] hover:text-(--orange-color) transition-all duration-200 ease-in">{{ childLink.title |
                upcase }}</a>
            </li>
            {% endfor %}
            {% endif %}
            {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Column 3 -->
        <div
          class="flex flex-col flex-1 items-center text-center pt-5 pb-5 gap-y-[36px] border border-l-0 border-r-0 border-t-0 border-b-(--border-color) lg:items-end lg:text-right lg:h-[377px] relative lg:border-t border-[var(--border-color)] lg:pr-10">
          <h3 class="font-semibold text-lg text-(--beige-light) text-[16px] opacity-[0.3] lg:text-[24px] ">PRODOTTI SPECIALI</h3>
          <div class="w-full h-auto flex flex-col items-center justify-center gap-y-2.5 lg:items-end">
            {% assign productLink = "Prodotti" %}
            {% for link in linklists.main-menu.links %}
            {% if link.title == productLink %}
            {% assign matchingLink = link %}
            {% if matchingLink.links.size > 0 %}
            {% for childLink in matchingLink.links %}
            <li class="list-none">
              <a href="{{ childLink.url }}" class="text-[24px] hover:text-(--orange-color) transition-all duration-200 ease-in">{{ childLink.title |
                upcase }}</a>
            </li>
          {% endfor %}
        {% endif %}
        {% endif %}
        {% endfor %}
          </div>

          <div
            class="w-full h-auto pt-5 flex flex-col items-center justify-center border border-r-0 border-l-0 border-b-0 border-t-(--border-color) lg:absolute lg:border-0 lg:justify-end lg:items-end lg:bottom-0 lg:right-0 lg:pb-5 lg:bottom-5">
            <div
              class="back-up w-full h-auto flex flex-row-reverse gap-x-2.5 items-center justify-center lg:justify-start lg:pr-5 lg:pb-5">
              <p class="text-[12px] leading-normal font-(family-name:--submain-mobile-title-font-family)">{{
                section.settings.back_up_text | default: "torna su" | upcase }}</p>
              {% render 'arrow-footer-up' %}
            </div>
          </div>
        </div>


        <!-- Column 4 -->
        <div
          class="w-full h-auto py-5 flex flex-col items-center justify-center border border-r-0 border-l-0 border-t-0 border-b-(--border-color) lg:border-0 lg:absolute lg:bottom-0">
          <a href="{{ section.settings.brand_link }}" class="flex flex-row items-center justify-start gap-x-2.5">
            <span style="font-family: var(--submain-mobile-title-font-family); 
color: #E86A58;">{{ section.settings.brand_name }}</span>
            <span class="inline-flex">
              <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" viewBox="0 0 8 8" fill="none">
                <path d="M1 1H7V7" stroke="#E86A58" />
                <path d="M1.17285 6.8335L6.88133 1.12504" stroke="#E86A58" />
              </svg>
            </span>
          </a>
        </div>
      </div>
    </div>

    <!-- Under Footer -->
    <div class="w-full h-auto flex flex-col items-center justify-center pt-5">
      <div class="w-full h-auto flex flex-col lg:flex-row items-center lg:justify-between gap-x-4">

        <!-- Column 1 -->
        <div class="w-full h-auto flex flex-col items-center text-center justify-center lg:items-start lg:pl-5">
          <p class="text-[12px] font-(family-name:--submain-mobile-title-font-family) font-bold">{{
            section.settings.company_info | upcase }}</p>
        </div>

        <!-- Column 2 -->
        <div
          class="w-full h-auto flex flex-row items-center justify-center gap-x-0.5 lg:items-center lg:justify-end lg:pr-5">
          <a href="{{ section.settings.cookie_link }}"
            class="text-[12px] font-(family-name:--submain-mobile-title-font-family) font-bold">{{
            section.settings.cookie_text }}</a>
          <a href="{{ section.settings.privacy_link }}"
            class="text-[12px] font-(family-name:--submain-mobile-title-font-family) font-bold">|{{
            section.settings.privacy_text }}|</a>
          <a href="{{ section.settings.credits_link }}"
            class="text-[12px] font-(family-name:--submain-mobile-title-font-family) font-bold">{{
            section.settings.credits_text }}</a>
        </div>

      </div>
    </div>

  </footer>
</div>

<!--scroll documento to top by clicking -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const backUpText = document.querySelector('.back-up');
    backUpText.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  });
</script>



