<!-- canteen information text -->
<div class="canteen-information-wrapper w-full h-auto overflow-x-hidden overflow-y-hidden lg:px-5">
  <div class="w-full h-auto flex flex-col items-start justify-center gap-y-[100px] lg:gap-y-[120px]">
    {% for block in section.blocks %}
    {% if block.type == "block_text" %}
    <div class="w-full h-auto flex flex-col items-start justify-center gap-y-5 lg:gap-y-[50px]">

      <div class="container-trigger-title w-full h-auto overflow-x-auto overflow-y-hidden py-1.5 lg:py-0 lg:w-auto">
        <h2
          class="moving-title main-title font-(family-name:--main-title-mobile-font-family) text-[128px] text-nowrap font-light leading-[90%] lg:text-[96px] lg:leading-[105%] lg:whitespace-normal"
          style="
                                {% if block.settings.is_stroke_text %}
                                    color: transparent;
                                    -webkit-text-stroke-width: 1.5px;
                                    -webkit-text-stroke-color: {{ block.settings.color_text }};
                                {% else %}
                                    color: {{ block.settings.color_text }};
                                {% endif %}
                                
                                {% if block.settings.is_padding_text %}
                                    margin-left: {{ block.settings.padding_left_text_title | times: 5.17 }}px;
                                {% else %}
                                    margin-left: 0px;
                                {% endif %}
                            ">
          {{ block.settings.main_text | upcase }}
        </h2>
        {% if block.settings.additional_text %}
        <h2
          class="moving-title main-title font-(family-name:--main-title-mobile-font-family) text-nowrap text-[128px] font-light leading-[90%] lg:text-[96px] lg:leading-[105%] lg:whitespace-normal"
          style="
                {% if block.settings.is_stroke_text %}
                    color: transparent;
                    -webkit-text-stroke-width: 1.5px;
                    -webkit-text-stroke-color: {{ block.settings.color_text }};
                {% else %}
                    color: {{ block.settings.color_text }};
                {% endif %}
                
                {% if block.settings.is_padding_text %}
                    margin-left: {{ block.settings.padding_left_text_title | times: 5.17 }}px;
                {% else %}
                    margin-left: 0px;
                {% endif %}
            ">
          {{ block.settings.additional_text | upcase }}
          {% endif %}
      </div>

      <div class="w-full h-auto px-5">
        <p class="paragraph-container lg:max-w-[726px]" style="
          {% if block.settings.is_padding_text %}
                                    margin-left: {{ block.settings.padding_left_paragraph | times: 5.17 }}px;
                                {% else %}
                                    margin-left: 0px;
                                {% endif %}">{{ block.settings.paragraph_text }}</p>
      </div>

    </div>
    {% endif %}
    {% endfor %}
  </div>
</div>

{% style %}

.canteen-information-wrapper {
margin-top: {{ section.settings.margin_desktop_section }}px;
margin-bottom: {{ section.settings.margin_desktop_section }}px;
}

@media (max-width: 480px) {
.canteen-information-wrapper {
margin-top: {{ section.settings.margin_mobile_section }}px;
margin-bottom: {{ section.settings.margin_mobile_section }}px;
}

.main-title {
margin-left: 0px !important;
}

.paragraph-container {
margin-left: 0px !important;
}
}
{% endstyle %}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const movingTitle = document.querySelectorAll('.moving-title');
    gsap.registerPlugin(ScrollTrigger);

    const getScrollValue = (index) => {
      const title = movingTitle[index];
      const valueToScroll = title.scrollWidth - title.clientWidth;
      if (valueToScroll != 0) {
        return valueToScroll;
      }
    };

    const matchMedia = gsap.matchMedia();
    matchMedia.add("(max-width: 767px)", () =>{
      movingTitle.forEach((title, index) => {
      const scrollValue = getScrollValue(index);
      gsap.to(title, {
        x: -scrollValue,
        ease: "power1.inOut",
        scrollTrigger: {
          trigger: title,
          start: "top center",
          end: "bottom center",
          scrub: 1
        }
      });
    });
    })

  });
</script>



{% schema %}
{
"name": "canteen_information",
"settings": [
{
"type": "range",
"id": "margin_desktop_section",
"unit": "px",
"min": 0,
"max": 100,
"step": 10,
"default": 60,
"label": "Section distance top & bottom on desktop"
},
{
"type": "range",
"id": "margin_mobile_section",
"unit": "px",
"min": 0,
"max": 100,
"step": 10,
"default": 30,
"label": "Section distance top & bottom on mobile"
}
],
"blocks": [
{
"type": "block_text",
"name": "block_text",
"settings": [
{
"type": "text",
"id": "main_text",
"label": "Main section title"
},
{
"type": "textarea",
"id": "paragraph_text",
"label": "Paragraph text"
},
{
"type": "checkbox",
"id": "is_stroke_text",
"default": false,
"label": "Stroke text"
},
{
"type": "text",
"id": "additional_text",
"label": "Additional text"
},
{
"type": "color",
"id": "color_text",
"label": "Color text"
},
{
"type": "range",
"id": "padding_left_text_title",
"label": "Distance from left title",
"default": 0,
"min": 0,
"max": 100,
"step": 10
},
{
"type": "range",
"id": "padding_left_paragraph",
"label": "Distance from left paragraph",
"default": 0,
"min": 0,
"max": 100,
"step": 10
},
{
"type": "checkbox",
"id": "is_padding_text",
"default": false,
"label": "Distance from left text"
}
]
}
],
"presets": [
{
"name": "Canteen information section",
"settings": {},
"blocks": [
{
"type": "block_text",
"settings": {
"main_text": "Title",
"paragraph_text": "Here you can find all the information about our canteen services.",
"additional_text": "Additional text",
"is_stroke_text": false,
"color_text": "#333333",
"padding_left_text_title": 0,
"padding_left_paragraph": 0,
"is_padding_text": true
}
}
]
}
]
}
{% endschema %}