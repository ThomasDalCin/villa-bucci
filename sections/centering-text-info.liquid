<!-- centering text info canteen -->
<div class="w-full h-auto">
  <div class="w-full flex flex-col items-center justify-center px-8 py-[100px] h-auto min-h-[679px] gap-y-16 lg:min-h-[816px]">

    <!--box image -->
    {% if section.settings.poster_img %}
      <div class="w-full h-auto flex flex-col items-start justify-center">
        <div class="w-full h-[493px]">
          <img class="w-full h-full object-center object-cover" src="{{ section.settings.poster_img |  img_url: 'master' }}" alt="{{ section.settings.poster_img.alt }}">
        </div>
      </div>  
    {% endif %}

    <!-- box text content -->
    <div class="w-full h-auto flex flex-col items-center justify-center gap-y-8 lg:gap-y-10 lg:w-auto">
      {% for block in section.blocks %}

        {% if block.type == "canteen_info" %}

          {% if block.settings.section_main_small_title and block.settings.section_main_small_title_visibility %}
            <p class="text-[12px] tracking-[0.12px] text-center uppercase">{{ block.settings.section_main_small_title | default: "small title" }}</p>
          {% endif %}

          <div class="w-full h-auto flex items-center justify-center lg:w-auto">
            <h2 class="text-[60px] leading-[60px] tracking-[-0.6px] lg:text-[120px] lg:leading-[100px] lg:tracking-[-1.2px]">
              {{ block.settings.section_main_title | default: "Dal 1987" | upcase }}
            </h2>
          </div>

          <div class="w-full h-auto flex flex-col items-ceter justify-center gap-y-4 lg:gap-y-8 lg:w-[900px]">

            {% if block.settings.show_subheading %}
              <h3 class="text-[24px] leading-[32px] italic text-center lg:text-[32px] lg:leading-[40px] lg:tracking-[0.32px]">{{ block.settings.italic_style_text | default: "Villa Bucci è un autentico simbolo nella storia del Verdicchio, un nome che incarna oltre tre secoli di tradizione vinicola." }}</h3>
            {% endif %}

            <div class="w-full h-auto flex items-center justify-center">
              <p class="text-[16px] leading-[28px] tracking-[0.2px] text-center lg:max-w-[698px]">{{ block.settings.default_style_text | default: "Fondata nel 1987, la tenuta si distingue per la produzione di vini d’eccellenza, tra cui il Verdicchio dei Castelli di Jesi e il Rosso Piceno, autentiche espressioni del terroir marchigiano e della qualità dei vini bianchi e rossi di questa regione." }}</p>
            </div>
          </div>

        {% endif %}

      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "canteen_text_info",
  "settings": [
    {
      "type": "image_picker",
      "id": "poster_img",
      "label": "Poster Img"
    }
  ],
  "blocks": [
    {
      "name": "Canteen Info Block",
      "type": "canteen_info",
      "settings": [
        {
          "type": "text",
          "id": "section_main_small_title",
          "label": "Section small main title"
        },
        {
          "type": "checkbox",
          "id": "section_main_small_title_visibility",
          "label": "Visibility small main title",
          "default": true
        },
        {
          "type": "text",
          "id": "section_main_title",
          "label": "Section main title"
        },
        {
          "type": "text",
          "id": "italic_style_text",
          "label": "Italic Style Text"
        },
        {
          "type": "text",
          "id": "default_style_text",
          "label": "Default Style Text"
        },
        {
          "type": "checkbox",
          "id": "show_subheading",
          "label": "Visibility italic style text",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "default canteen text info",
      "category": "Custom",
      "blocks": [
        {  
          "type": "canteen_info",
          "settings": {
            "section_main_small_title": "Small title",
            "section_main_small_title_visibility": true,
            "section_main_title": "Dal 1987",
            "italic_style_text": "Villa Bucci è un autentico simbolo nella storia del Verdicchio, un nome che incarna oltre tre secoli di tradizione vinicola.",
            "default_style_text": "Fondata nel 1987, la tenuta si distingue per la produzione di vini d’eccellenza, tra cui il Verdicchio dei Castelli di Jesi e il Rosso Piceno, autentiche espressioni del terroir marchigiano e della qualità dei vini bianchi e rossi di questa regione.",
            "show_subheading": true
          }
        }
      ]
    }
  ]
}

{% endschema %}